{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"target": "ESNext",
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"baseUrl": ".",
		"paths": {
			"~styled-system/*": ["styled-system/*"]
		}
	},
	"include": ["src", "styled-system", "*.ts"]
}
